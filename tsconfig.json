{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "turbo-components": ["./components/index.ts"],
      "turbo-components/esm/*": ["./components/*"],
      "turbo-components/lib/*": ["./components/*"]
    }
  },
  "include": ["./components", "./doc-comps", "global.d.ts"],
  "exclude": ["types", "node_modules", "lib", "esm"]
}