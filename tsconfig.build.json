{
  "extends": "./tsconfig.json",
  "compilerOptions": { 
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "emitDeclarationOnly": true
  }, // 只生成声明文件
  "include": ["./src/components/*.ts", "./src/components/*.tsx"],
  "exclude": ["**/__tests__/**", "site", "node_modules", "lib", "esm"] // 排除示例、测试以及打包好的文件夹
}